---
import type { VariantIntent } from "@/types/index";

type Props = {
    title: string;
    icon?: string;
    description: string;
    intent: VariantIntent;
};
const { title, icon = "i-ph-info", description, intent } = Astro.props;
---

<div
    class:list={[
        "rd-md p-4 flex items-start gap-x-4",
        {
            "ui-solid text-body": intent === "gray",
            "ui-solid-primary text-gray200": intent === "primary",
            "ui-solid-secondary text-gray200": intent === "secondary",
            "ui-solid-accen text-gray200": intent === "accent",
            "ui-solid-success text-gray200": intent === "success",
            "ui-solid-danger text-gray200": intent === "danger",
            "ui-solid-warning text-gray200": intent === "warning",
            "ui-solid-info text-gray200": intent === "info",
            "ui-solid-neutral text-gray200 dark-text-gray700":
                intent === "neutral",
        },
    ]}
>
    <div class="w-max">
        <span class={`flex text-lg ${icon}`}></span>
    </div>
    <div class="flex-1">
        <h3
            class:list={[
                "font-medium text-lg",
                {
                    "text-title": intent === "gray",
                    "text-white": intent !== "gray" && intent !== "neutral",
                    "text-title-reverse": intent === "neutral",
                },
            ]}
        >
            {title}
        </h3>
        <p>
            {description}
        </p>
    </div>
</div>
