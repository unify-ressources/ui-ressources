---
import type { VariantIntent } from "@/types/index";

type Props = {
    title: string;
    icon?: string;
    description: string;
    intent: VariantIntent;
};
const { title, icon = "i-ph-info", description, intent } = Astro.props;
---

<div
    class:list={[
        "rd-md p-4 flex items-start gap-x-4",
        {
            "ui-subtle": intent === "gray",
            "ui-subtle-primary": intent === "primary",
            "ui-subtle-secondary": intent === "secondary",
            "ui-subtle-accent": intent === "accent",
            "ui-subtle-success": intent === "success",
            "ui-subtle-danger": intent === "danger",
            "ui-subtle-warning": intent === "warning",
            "ui-subtle-info": intent === "info",
            "ui-subtle-neutral": intent === "neutral",
        },
    ]}
>
    <div class="w-max">
        <span class={`flex text-lg ${icon}`}></span>
    </div>
    <div class="flex-1">
        <h3
            class:list={[
                "font-medium text-lg",
                {
                    "text-title": intent === "gray" || intent === "neutral",
                    "text-primary-600": intent === "primary",
                    "text-secondary-600": intent === "secondary",
                    "text-accent-600": intent === "accent",
                    "text-success-600": intent === "success",
                    "text-info-600": intent === "info",
                    "text-warning-600": intent === "warning",
                    "text-danger-600": intent === "danger"
                },
            ]}
        >
            {title}
        </h3>
        <p>
            {description}
        </p>
    </div>
</div>
